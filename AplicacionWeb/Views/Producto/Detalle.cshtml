@model ProductoVM
@{
    ViewData["Title"] = "Detalle";
}


<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">Detalle
      <small>@Model.oProducto.Nombre</small>
    </h1>
  
    <!-- Portfolio Item Row -->
    <div class="row">
  
      <div class="col-md-8">
        <img class="img-fluid" src="@Model.oProducto.UrlImagen" alt="">
      </div>
  
      <div class="col-md-4">
        <h3 class="my-3">Descripción</h3>
        <p>@Model.oProducto.Descripcion</p>
        <h3 class="my-3">@Model.oProducto.Precio</h3>    
        <a class="btn btn-primary" asp-action="" asp-controller="" asp-route-IdProducto="@Model.oProducto.IdProducto">Comprar</a>
      </div>
  
    </div>
    <!-- /.row -->
  
    <!-- Related Projects Row -->
