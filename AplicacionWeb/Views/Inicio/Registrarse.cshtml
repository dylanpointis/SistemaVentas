@model UsuarioVM;


@{
    ViewData["Title"] = "Registrarse";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-4 col-md-6">
            <div class="card">
                <div class="card-header">Registrarse</div>
                <div class="card-body">
                    <form asp-controller="Inicio" asp-action="Registrarse" method="post">

                        <input class="form-control mb-3" type="text" placeholder="Nombre Completo" asp-for="oUsuario.Nombre" required />
                        <input class="form-control mb-3" type="text" placeholder="Correo" asp-for="oUsuario.Correo" required />
                        <input class="form-control mb-3" type="password" placeholder="Contraseña" asp-for="oUsuario.Clave" required />
                        <input asp-for="oUsuario.IdRol" value="3" type="hidden">

                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Registrarse</button>
                        </div>

                        @if (ViewData["Error"] != null)
                        {
                            <div class="form-group">
                                <div class="alert alert-danger" role="alert"> @ViewData["Error"]</div>
                            </div>
                        }

                        ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Inicio")">Iniciar sesion</a>

                    </form>
                </div>


            </div>
        </div>
    </div>
</div>

