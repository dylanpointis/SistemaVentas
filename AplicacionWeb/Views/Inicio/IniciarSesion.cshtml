
@{
    ViewData["Title"] = "IniciarSesion";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-4 col-md-6">
            <div class="card">
                <div class="card-header">Iniciar Sesión</div>
                <div class="card-body">
                    <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">
                        <input class="form-control mb-3" type="text" placeholder="Correo" required name="correo" />
                        <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="clave" />
                        
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Iniciar Sesión</button>
                        </div>
                        
                        @if (ViewData["Error"] != null)
                        {
                            <div class="form-group">
                                <div class="alert alert-danger" role="alert"> @ViewData["Error"]</div>
                            </div>
                        }

                        ¿No tienes una cuenta? <a href="@Url.Action("Registrarse","Inicio")">Registrarse</a>
                    
                    </form>
                </div>
                

            </div>
        </div>
    </div>
</div>

